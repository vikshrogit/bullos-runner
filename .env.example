# =============================
# === Required configuration ===
# =============================

# GitHub org / repo URL (examples):
#   - Organization: https://github.com/your-org
#   - Repository:   https://github.com/your-org/your-repo
#   - User account: https://github.com/your-username
GITHUB_URL=https://github.com/your-org

# Preferred authentication:
# --------------------------
# Option A: Personal Access Token (PAT) with "repo" + "admin:org" + "workflow" scopes.
#           This is RECOMMENDED for long-lived runners because it auto-fetches fresh runner tokens.
GITHUB_PAT=ghp_xxxxxxxx

# Option B: One-time runner registration token (fallback).
#           Get this from GitHub → Settings → Actions → Runners → Add Runner → Generate Token.
#           ⚠️ This token expires quickly and will fail on restart if not replaced.
#RUNNER_TOKEN=ghr_xxxxxxxx


# =============================
# === Optional configuration ===
# =============================

# Custom runner name (default = container hostname)
RUNNER_NAME=runner-01

# Comma-separated list of labels (visible in Actions runner selection)
RUNNER_LABELS=self-hosted,linux,bullos

# Working directory inside runner home (default = _work)
RUNNER_WORKDIR=_work

# Ephemeral mode (true/false). If true, runner auto-unregisters after one job
RUNNER_EPHEMERAL=false

# Assign to a specific runner group (must exist in org settings)
RUNNER_RUNNERGROUP=Default

# Enable debug logs (true/false)
RUNNER_DEBUG=true

# Max concurrency of jobs on this runner (default = 1)
RUNNER_CONCURRENCY=4


# =============================
# === Metrics & Tracing ===
# =============================

# Enable built-in Prometheus node_exporter (port 9100)
METRICS_ENABLED=true

# Enable OpenTelemetry collector (ports 4317/4318)
TRACING_ENABLED=false

# Set to true if running in autoscaling pools (multiple runner replicas)
AUTOSCALE_MODE=false
